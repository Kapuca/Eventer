<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/test1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.flayingfrog.eventer.Test1">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/twy"
        android:id="@+id/imagen"
        android:adjustViewBounds="true"
        android:layout_above="@+id/Cross"
        android:layout_marginBottom="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/cross"
        android:layout_marginBottom="33dp"
        android:id="@+id/Cross"
        android:layout_marginRight="53dp"
        android:layout_marginEnd="53dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/Tic"
        android:layout_toStartOf="@+id/Tic"
        android:onClick="crossClicked" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/tic"
        android:id="@+id/Tic"
        android:layout_marginRight="78dp"
        android:layout_marginEnd="78dp"
        android:layout_below="@+id/imagen"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="ticClicked" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:text="Info"
        android:ems="10"
        android:layout_alignBottom="@+id/imagen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/info"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
